datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id       Int     @id @default(autoincrement())
  name     String
  phone    String?
  uid      String  @unique
  active   Boolean @default(true)
  logs     AttendanceLog[]
}

model AttendanceLog {
  id        Int      @id @default(autoincrement())
  ts        DateTime @default(now())
  status    Status
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])
}

enum Status {
  Entry
  Exit
  Absent
}

model Holiday {
  id   Int      @id @default(autoincrement())
  date DateTime
  note String?
}